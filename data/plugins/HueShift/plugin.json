{
    "name": "Hue Shift",
    "description": "Adds action to change the hue of all colors (and animate this kind of effect)",
    "author": "Glax",
    "engine": "python",
    "version": 1,
    "icon": "theme:color-management",
    "services": [
        {
            "type": "action",
            "label": "Hue Shift",
            "script": {
                "module": "hue_shift",
                "function": "hue_shift",
                "settings": [
                    {
                        "name": "amount",
                        "type": "int",
                        "label": "Amount",
                        "default": 0,
                        "min": 0,
                        "max": 360
                    }
                ]
            }
        },
        {
            "type": "action",
            "label": "Hue Shift Cycle",
            "script": {
                "module": "hue_shift",
                "function": "hue_shift_cycle",
                "settings": [
                    {
                        "name": "amount",
                        "type": "int",
                        "label": "Amount per Step",
                        "default": 30,
                        "min": 0,
                        "max": 360
                    },
                    {
                        "name": "duration",
                        "type": "int",
                        "label": "Step Duration",
                        "default": 15,
                        "min": 1,
                        "max": 3600
                    },
                    {
                        "name": "step_count",
                        "type": "int",
                        "label": "Step Count",
                        "default": 12,
                        "min": 1,
                        "max": 999
                    },
                    {
                        "name": "easing",
                        "type": "choice",
                        "label": "Easing",
                        "default": "Linear",
                        "choices": ["Linear", "Ease", "Hold"]
                    }
                ]
            }
        }
    ]
}
